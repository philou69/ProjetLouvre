{% block checkbox_row %}
	<div class="form-group">
		<label for="{{ id }}" class='col-xs-5 col-sm-3 control-label'>{{ label }}</label>
		{{ block('checkbox_erros') }}
		<div class="col-xs-6 col-sm-5">
			<input type="checkbox" name="{{ full_name }}" value="{{value}}" id="{{ id}}" class="form-check_input">
		</div>
	</div>
{% endblock %}

{% block text_row %}
	<div class="form-group">
		<label for="{{ id }}" class='col-xs-4 col-sm-3 control-label'>{{ label }}</label>
		{{ block('text_erros') }}
		<div class="col-xs-5 col-sm-5">
			<input type="text" name="{{ full_name }}" value="{{value}}" id="{{ id}}" class="form-control">
		</div>
	</div>
{% endblock %}
{% block date_row %}
	<div class="form-group">
		<label for="{{ id }}" class='col-xs-4 col-sm-3 control-label'>{{ label }}</label>
		{{ block('date_erros') }}
		<div class="col-xs-6 col-sm-5">
		{{ block('date_widget')}}
		</div>
	</div>
{% endblock %}
